<Window x:Class="SystemChat.Client.WPF.SystemChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SystemChat.Client.Client.WPF.WPF"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        mc:Ignorable="d"
        Title="ChatSystem" 
        Height="425" 
        Width="525"
        Loaded="OnWindowFormLoaded"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="107*"/>
            <ColumnDefinition Width="66*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Post" 
                HorizontalAlignment="Left" 
                Margin="98.119,270,0,0" 
                VerticalAlignment="Top"
                Width="75" 
                Height="24" 
                Click="OnPostButtonClick"
                IsDefault="True" Grid.Column="1"/>

        <TextBox HorizontalAlignment="Left"
                 Name="postContent"
                 MaxLength="35"
                 Height="24" 
                 Padding="3"
                 Margin="47,270,0,0" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top"
                 Width="367" Grid.ColumnSpan="2"/>

        <TextBox Name="allPostsTextBox"
                 Focusable="False"
                 ScrollViewer.HorizontalScrollBarVisibility="Auto"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                 IsReadOnly="true"
                 Padding="5"
                 HorizontalAlignment="Left"
                 Margin="15,10,0,0"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Height="237"
                 Width="479" Grid.ColumnSpan="2"/>

        <Button Content="Show all posts" 
                HorizontalAlignment="Left" 
                Margin="47,313,0,0" 
                VerticalAlignment="Top"
                Width="447" 
                Height="28"
                Click="OnShowAllPostsButtonClick" Grid.ColumnSpan="2"/>

        <Button Content="Show posts from current session" 
                Name="showPostsFromCurrentSessionButton"
                HorizontalAlignment="Left" 
                Margin="47,346,0,0" 
                VerticalAlignment="Top" 
                Width="447" 
                Height="28"
                Click="OnShowAllPostsFromCurrentSessionButtonClick" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
